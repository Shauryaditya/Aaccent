---
import  './styles/style.scss'
---
<div class="container">
    
    <div class="mobile-layout">
      <div class="notification-header">
        <div class="necessities">
          <i class="fas fa-signal"></i>
          <i class="fas fa-wifi"></i>
          <i class="fas fa-battery-full"></i>
        </div>
      </div>
      <div class="actions">
        <i class="fas fa-chevron-left"></i>
        <i class="fas fa-bookmark"></i>
      </div>  
      <div class="book-cover">
          <img class="book-top" src="https://res.cloudinary.com/dvjbrjvgf/image/upload/v1705062378/Aaccent/rhaks1f96whybxkjr05d.jpg" alt="book-top" />
        <img class="book-side" src="https://raw.githubusercontent.com/atomic-variable/images-repo/e37f432405904a280858e5437ce1960753bc78a3/book-side.svg" alt="book-side" /> 
      </div>
      <div class="preface">
        <div class="content">
          <div class="header">
            <div class="title">Book Your First Appointment</div>
            <div class="icon">
              <i class="fas fa-chevron-down"></i>
            </div>
          </div>
          
          <div class="body">
            <p>
                Let our professional expertise guide your child in achieving their goals.
            </p>
           
          </div>
        </div>
      </div>
    </div>
  </div>
  