---
const courses = [
  "Foundation Courses (Class 6-8)",
  "CBSE Board (Class 9-12)",
  "ICSE Board (Class 9-10)",
  "ISC Board (Class 11-12)",
  "Madhyamik Board (Class 10)",
  "JEE Mains Preparation",
  "NEET Preparation",
  "Other - Please Specify"
];

const classes = [
  "Class 6", "Class 7", "Class 8", 
  "Class 9", "Class 10", 
  "Class 11", "Class 12"
];
---

<section class="py-20 px-4 bg-gradient-to-b from-stone-50 to-white" id="enrollment">
  <div class="max-w-6xl mx-auto">
    
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-start">
      
      <!-- Left Side - Info -->
      <div class="enrollment-info">
        <h2 class="text-4xl md:text-5xl font-extrabold text-gray-900 mb-6">
          Start Your Success Journey Today
        </h2>
        <p class="text-lg text-stone-600 mb-8 leading-relaxed">
          Join hundreds of successful students at Advantage Academic Center. Fill out the form and our counselors will contact you within 24 hours to guide you through the enrollment process.
        </p>

        <!-- Benefits List -->
        <div class="space-y-4 mb-8">
          <div class="flex items-start gap-3">
            <div class="w-6 h-6 rounded-full bg-green-100 flex items-center justify-center flex-shrink-0 mt-1">
              <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
            </div>
            <div>
              <h4 class="font-bold text-gray-900">Personalized Counseling</h4>
              <p class="text-stone-600 text-sm">Get expert guidance on the best course for you</p>
            </div>
          </div>

          <div class="flex items-start gap-3">
            <div class="w-6 h-6 rounded-full bg-green-100 flex items-center justify-center flex-shrink-0 mt-1">
              <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
            </div>
            <div>
              <h4 class="font-bold text-gray-900">Flexible Batch Timings</h4>
              <p class="text-stone-600 text-sm">Choose from multiple batch options that fit your schedule</p>
            </div>
          </div>
        </div>

        <!-- Contact Info -->
        <div class="bg-stone-100 rounded-2xl p-6">
          <h3 class="font-bold text-gray-900 mb-3">Need Help?</h3>
          <div class="space-y-2 text-stone-700">
            <p class="flex items-center gap-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
              <span>Call: +91-9433427259/9477209274</span>
            </p>
            <p class="flex items-center gap-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
              <span>Email: aaccent2k@gmail.com</span>
            </p>
          </div>
        </div>
      </div>

      <!-- Right Side - Form -->
      <div class="bg-white rounded-3xl shadow-2xl border-2 border-stone-100 p-8 enrollment-form">
        <h3 class="text-2xl font-bold text-gray-900 mb-6">Enrollment Form</h3>
        
        <form 
          id="enrollmentForm" 
          action="https://formspree.io/f/mnnlgwen" 
          method="POST"
          class="space-y-5"
        >
          
          <!-- Student Name -->
          <div>
            <label for="studentName" class="block text-sm font-semibold text-gray-900 mb-2">
              Student Name <span class="text-red-500">*</span>
            </label>
            <input 
              type="text" 
              id="studentName" 
              name="studentName"
              required
              class="w-full px-4 py-3 rounded-xl border-2 border-stone-200 focus:border-gray-900 focus:outline-none transition-colors"
              placeholder="Enter student's full name"
            />
          </div>

          <!-- Parent Name -->
          <div>
            <label for="parentName" class="block text-sm font-semibold text-gray-900 mb-2">
              Parent/Guardian Name <span class="text-red-500">*</span>
            </label>
            <input 
              type="text" 
              id="parentName" 
              name="parentName"
              required
              class="w-full px-4 py-3 rounded-xl border-2 border-stone-200 focus:border-gray-900 focus:outline-none transition-colors"
              placeholder="Enter parent's name"
            />
          </div>

          <!-- Email -->
          <div>
            <label for="email" class="block text-sm font-semibold text-gray-900 mb-2">
              Email Address <span class="text-red-500">*</span>
            </label>
            <input 
              type="email" 
              id="email" 
              name="email"
              required
              class="w-full px-4 py-3 rounded-xl border-2 border-stone-200 focus:border-gray-900 focus:outline-none transition-colors"
              placeholder="your.email@example.com"
            />
          </div>

          <!-- Phone -->
          <div>
            <label for="phone" class="block text-sm font-semibold text-gray-900 mb-2">
              Phone Number <span class="text-red-500">*</span>
            </label>
            <input 
              type="tel" 
              id="phone" 
              name="phone"
              required
              pattern="[0-9]{10}"
              class="w-full px-4 py-3 rounded-xl border-2 border-stone-200 focus:border-gray-900 focus:outline-none transition-colors"
              placeholder="10-digit mobile number"
            />
          </div>

          <!-- Class -->
          <div>
            <label for="class" class="block text-sm font-semibold text-gray-900 mb-2">
              Current Class <span class="text-red-500">*</span>
            </label>
            <select 
              id="class" 
              name="class"
              required
              class="w-full px-4 py-3 rounded-xl border-2 border-stone-200 focus:border-gray-900 focus:outline-none transition-colors bg-white"
            >
              <option value="">Select class</option>
              {classes.map(cls => (
                <option value={cls}>{cls}</option>
              ))}
            </select>
          </div>

          <!-- Course Interest -->
          <div>
            <label for="course" class="block text-sm font-semibold text-gray-900 mb-2">
              Course Interest <span class="text-red-500">*</span>
            </label>
            <select 
              id="course" 
              name="course"
              required
              class="w-full px-4 py-3 rounded-xl border-2 border-stone-200 focus:border-gray-900 focus:outline-none transition-colors bg-white"
            >
              <option value="">Select course</option>
              {courses.map(course => (
                <option value={course}>{course}</option>
              ))}
            </select>
          </div>

          <!-- Message -->
          <div>
            <label for="message" class="block text-sm font-semibold text-gray-900 mb-2">
              Additional Message (Optional)
            </label>
            <textarea 
              id="message" 
              name="message"
              rows="3"
              class="w-full px-4 py-3 rounded-xl border-2 border-stone-200 focus:border-gray-900 focus:outline-none transition-colors resize-none"
              placeholder="Any specific requirements or questions?"
            ></textarea>
          </div>

          <!-- Submit Button -->
          <button 
            type="submit"
            class="w-full bg-gradient-to-r from-gray-900 to-stone-800 text-white py-4 rounded-xl font-bold text-lg hover:-translate-y-1 hover:shadow-2xl transition-all duration-300"
          >
            Submit Enrollment Request
          </button>

          <!-- Success/Error Message -->
          <div id="formMessage" class="hidden p-4 rounded-xl text-center font-semibold"></div>
        </form>
      </div>

    </div>
  </div>
</section>

<script>
  import gsap from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  // Animate info section
  gsap.from('.enrollment-info', {
    opacity: 0,
    x: -50,
    duration: 0.8,
    ease: 'power2.out',
    scrollTrigger: {
      trigger: '.enrollment-info',
      start: 'top 80%',
    }
  });

  // Animate form
  gsap.from('.enrollment-form', {
    opacity: 0,
    x: 50,
    duration: 0.8,
    ease: 'power2.out',
    scrollTrigger: {
      trigger: '.enrollment-form',
      start: 'top 80%',
    }
  });

  // Form submission handling with Formspree
  const form = document.getElementById('enrollmentForm') as HTMLFormElement;
  const formMessage = document.getElementById('formMessage') as HTMLElement;

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();

    const formData = new FormData(form);
    
    try {
      // Submit to Formspree
      const response = await fetch(form.action, {
        method: 'POST',
        body: formData,
        headers: {
          'Accept': 'application/json'
        }
      });

      if (response.ok) {
        // Show success message
        formMessage.textContent = 'Thank you! Your enrollment request has been submitted. We will contact you within 24 hours.';
        formMessage.className = 'p-4 rounded-xl text-center font-semibold bg-green-100 text-green-800 border-2 border-green-200';
        
        // Reset form
        form.reset();

        // Scroll to message
        formMessage.scrollIntoView({ behavior: 'smooth', block: 'nearest' });

        // Hide message after 8 seconds
        setTimeout(() => {
          formMessage.className = 'hidden';
        }, 8000);
      } else {
        throw new Error('Form submission failed');
      }

    } catch (error) {
      // Show error message
      formMessage.textContent = 'Something went wrong. Please try again or call us directly.';
      formMessage.className = 'p-4 rounded-xl text-center font-semibold bg-red-100 text-red-800 border-2 border-red-200';
      
      // Hide error message after 8 seconds
      setTimeout(() => {
        formMessage.className = 'hidden';
      }, 8000);
    }
  });
</script>