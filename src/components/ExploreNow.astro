---
// HeroSection.astro
---

<section class="hero-section">
  <div class="container">
    <div class="content">
      <h1 class="title">
        Learn Without <span class="highlight">Limits</span>
      </h1>
      <p class="description">
        Discover thousands of courses from world-class instructors.<br />
        Build skills that matter in today's digital world.
      </p>
      <div class="button-group">
        <button class="btn-primary">
         <a href="https://elearn.aaccent.in/search">Start Learning</a>   
        </button>
      </div>
    </div>

    <div class="floating-card">
      <img 
        src="https://res.cloudinary.com/dvjbrjvgf/image/upload/v1763271809/AdvantageFamily.jpg" 
        alt="Students learning"
        class="card-image"
      />
    </div>

    <div class="star-badge">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="white">
        <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"/>
      </svg>
    </div>
  </div>
</section>

<script>
  import gsap from 'gsap';

  // Floating animation for the card
  gsap.to('.floating-card', {
    y: -20,
    duration: 2.5,
    ease: 'power1.inOut',
    yoyo: true,
    repeat: -1
  });

  // Subtle rotation for added effect
  gsap.to('.floating-card', {
    rotation: 3,
    duration: 3,
    ease: 'sine.inOut',
    yoyo: true,
    repeat: -1
  });

  // Star badge animation
  gsap.to('.star-badge', {
    y: -10,
    duration: 2,
    ease: 'power1.inOut',
    yoyo: true,
    repeat: -1,
    delay: 0.5
  });

  // Icon subtle animation
  gsap.to('.icon-wrapper svg', {
    scale: 1.05,
    duration: 2,
    ease: 'power1.inOut',
    yoyo: true,
    repeat: -1
  });
</script>

<style>
  .hero-section {
    min-height: 60vh;
    display: flex;
    align-items: center;
    background: linear-gradient(135deg, #f8f9ff 0%, #ffffff 100%);
  }

  .container {
    padding: 5rem;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
    position: relative;
  }

  .content {
    z-index: 2;
  }

  .title {
    font-size: 3.5rem;
    font-weight: 800;
    line-height: 1.2;
    margin-bottom: 1rem;
    color: #1a202c;
  }

  .subtitle {
    font-size: 1.5rem;
    font-weight: 600;
    color: #4a5568;
    margin-bottom: 1.5rem;
  }

  .highlight {
    color: #7c3aed;
  }

  .description {
    font-size: 1.125rem;
    color: #4a5568;
    line-height: 1.8;
    margin-bottom: 2rem;
  }

  .button-group {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .btn-primary {
    display: inline-block;
    background: #1a202c;
    color: white;
    padding: 1rem 2.5rem;
    border-radius: 0.5rem;
    text-decoration: none;
    font-weight: 600;
    cursor: pointer;
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 20px rgba(26, 32, 44, 0.2);
  }

  .btn-secondary {
    background: transparent;
    color: #1a202c;
    padding: 1rem 2rem;
    border: none;
    font-weight: 600;
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    transition: gap 0.2s;
  }

  .btn-secondary:hover {
    gap: 0.75rem;
  }

  .floating-card {
    max-width: 400px;
    background: linear-gradient(135deg, #e0e7ff 0%, #ede9fe 100%);
    border-radius: 2rem;
    padding: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 20px 60px rgba(124, 58, 237, 0.15);
    position: relative;
  }

  .card-image {
    width: 400px;
    border-radius: 1.5rem;
  }

  .icon-wrapper {
    width: 120px;
    height: 120px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .star-badge {
    position: absolute;
    top: 2rem;
    right: 2rem;
    width: 56px;
    height: 56px;
    background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 10px 30px rgba(251, 191, 36, 0.4);
  }

  @media (max-width: 768px) {
    .container {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .title {
      font-size: 2.5rem;
    }

    .star-badge {
      right: 1rem;
      top: 1rem;
      width: 48px;
      height: 48px;
    }
  }
</style>