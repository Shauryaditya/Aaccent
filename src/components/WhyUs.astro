---
const benefits = [
  {
    icon: `<svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
      <circle cx="9" cy="7" r="4"></circle>
      <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
      <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
    </svg>`,
    title: "Expert Faculty",
    description: "Highly qualified teachers with 15+ years of experience in their subjects"
  },
  {
    icon: `<svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
      <line x1="3" y1="9" x2="21" y2="9"></line>
      <line x1="9" y1="21" x2="9" y2="9"></line>
    </svg>`,
    title: "Small Batch Size",
    description: "Maximum 10-15 students per batch ensuring personalized attention"
  },
  {
    icon: `<svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <polyline points="22 12 18 12 15 21 9 3 6 12 2 12"></polyline>
    </svg>`,
    title: "Consistent Progress Tracking",
    description: "Regular tests and detailed performance analysis to monitor growth"
  },
  {
    icon: `<svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <circle cx="12" cy="12" r="10"></circle>
      <polyline points="12 6 12 12 16 14"></polyline>
    </svg>`,
    title: "Flexible Timings",
    description: "Multiple batch options designed to fit your schedule perfectly"
  },
  {
    icon: `<svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M12 2L2 7l10 5 10-5-10-5z"></path>
      <path d="M2 17l10 5 10-5"></path>
      <path d="M2 12l10 5 10-5"></path>
    </svg>`,
    title: "Comprehensive Study Material",
    description: "Well-structured notes, practice papers, and digital resources"
  },
  {
    icon: `<svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9"></path>
      <path d="M13.73 21a2 2 0 0 1-3.46 0"></path>
    </svg>`,
    title: "Doubt Clearing Sessions",
    description: "Dedicated time for one-on-one doubt resolution after classes"
  }
];

const stats = [
  { number: "10000+", label: "Students Taught" },
  { number: "95%", label: "Success Rate" },
  { number: "20+", label: "Years Experience" },
  { number: "15", label: "Expert Teachers" }
];
---

<section class="py-12 px-4 bg-gradient-to-b from-stone-50 via-white to-stone-50 relative overflow-hidden">
  
  <!-- Background decoration -->
  <div class="absolute top-0 left-0 right-0 h-96 bg-gradient-radial from-purple-100/20 to-transparent pointer-events-none"></div>

  <div class="max-w-7xl mx-auto relative z-10">
    
    <!-- Header -->
    <div class="text-center mb-16 max-w-3xl mx-auto section-header">
      <h2 class="text-4xl md:text-5xl font-extrabold text-gray-900 mb-6 leading-tight">
        Why Choose Advantage Academic Center?
      </h2>
      <p class="text-lg text-stone-600 leading-relaxed">
        We understand your aspirations for your child's success. That's why we've built 
        an environment where consistent teaching, personalized attention, and proven methods 
        come together to unlock every student's true potential.
      </p>
    </div>

    <!-- Stats Section -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 md:gap-6 mb-20">
      {stats.map((stat, index) => (
        <div 
          class="bg-white p-6 md:p-8 rounded-2xl text-center shadow-lg border-2 border-stone-100 hover:border-gray-900 hover:-translate-y-2 transition-all duration-300 stat-card"
          data-stat-index={index}
        >
          <div class="text-4xl md:text-5xl font-extrabold text-gray-900 mb-2">
            {stat.number}
          </div>
          <div class="text-sm md:text-base text-stone-600 font-semibold">
            {stat.label}
          </div>
        </div>
      ))}
    </div>

    <!-- Benefits Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-20">
      {benefits.map((benefit, index) => (
        <div 
          class="bg-white p-8 rounded-2xl shadow-lg border-2 border-stone-100 hover:border-stone-300 hover:-translate-y-3 hover:shadow-2xl transition-all duration-300 benefit-card"
          data-benefit-index={index}
        >
          <div 
            class="w-16 h-16 bg-gradient-to-br from-stone-50 to-stone-100 rounded-xl flex items-center justify-center mb-6 text-gray-900"
            set:html={benefit.icon}
          />
          <h3 class="text-xl font-bold text-gray-900 mb-3">
            {benefit.title}
          </h3>
          <p class="text-stone-600 leading-relaxed">
            {benefit.description}
          </p>
        </div>
      ))}
    </div>

    <!-- CTA Section -->
    <div class="bg-gradient-to-br from-gray-900 to-stone-800 p-8 md:p-12 rounded-3xl text-center shadow-2xl cta-section">
      <h3 class="text-2xl md:text-3xl font-extrabold text-white mb-4">
        Ready to Transform Your Child's Academic Journey?
      </h3>
      <p class="text-lg text-stone-300 mb-8">
        Join hundreds of successful students at Advantage Academic Center
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a 
          href="https://elearn.aaccent.in/search" 
          class="px-8 py-4 bg-white text-gray-900 font-semibold rounded-xl hover:-translate-y-1 hover:shadow-xl transition-all duration-300"
        >
          Explore Courses
        </a>

      </div>
    </div>

  </div>
</section>

<script>
  import gsap from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  // Animate header
  gsap.from('.section-header', {
    y: 30,
    duration: 0.8,
    ease: 'power2.out',
    scrollTrigger: {
      trigger: '.section-header',
      start: 'top 80%',
    }
  });

  // Animate stats with stagger
  const statCards = gsap.utils.toArray('.stat-card');
  
  gsap.from(statCards, {
    y: 30,
    duration: 0.6,
    stagger: 0.1,
    ease: 'power2.out',
    scrollTrigger: {
      trigger: '.stat-card',
      start: 'top 85%',
    }
  });

  // Animate benefits cards
  const benefitCards = gsap.utils.toArray('.benefit-card');
  
  benefitCards.forEach((card: any) => {
    gsap.from(card, {
      opacity: 0,
      y: 50,
      duration: 0.6,
      ease: 'power2.out',
      scrollTrigger: {
        trigger: card,
        start: 'top 90%',
      }
    });
  });

  // Animate CTA section
  gsap.from('.cta-section', {
    opacity: 0,
    y: 30,
    duration: 0.8,
    ease: 'power2.out',
    scrollTrigger: {
      trigger: '.cta-section',
      start: 'top 85%',
    }
  });
</script>