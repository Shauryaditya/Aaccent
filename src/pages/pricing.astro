---
import Layout from "../layouts/Layout.astro";
const prices: {
  [classNumber: number]: { [subject: number]: number | undefined };
} = {
  4: { 1: 800, 2: 1500, 3: 1700, 4: undefined, 5: undefined },
  5: { 1: 800, 2: 1500, 3: 1700, 4: undefined, 5: undefined },
  6: { 1: 800, 2: 1400, 3: 1600, 4: 1800, 5: 1900 },
  7: { 1: 800, 2: 1400, 3: 1600, 4: 1900, 5: 2000 },
  8: { 1: 800, 2: 1500, 3: 1900, 4: 2000, 5: 2100 },
  9: { 1: 800, 2: 1500, 3: 1700, 4: 2000, 5: 2200 },
  10: { 1: 800, 2: 1500, 3: 2000, 4: 2100, 5: 2300 },
  11: { 1: 1200, 2: 2000, 3: 3000, 4: undefined, 5: undefined },
  12: { 1: 1200, 2: 2000, 3: 3000, 4: undefined, 5: undefined },
  // Add more rows as needed
};
---

<Layout>
    <h1 class="text-5xl font-bold text-center">Pricing as per board and classes</h1>
<div class="grid grid-cols-6 gap-1 md:gap-4 mx-auto max-w-4xl mt-12 mb-16 p-3">
    {/* Top-left cell */}
    <div class="group"></div>

    {/* Top row for subjects */}
    {
      [1, 2, 3, 4, 5].map((subject) => (
        <div class="group" >
          <div class="w-full bg-gray-300 p-4 flex justify-center items-center">
            <p class="font-bold text-xs md:text-base">No of subjects {subject}</p>
          </div>
        </div>
      ))
    }

    {/* Left column for classes */}
    {
      [4, 5, 6, 7, 8, 9, 10, 11, 12].map((classNumber) => (
        <Fragment key={`class-${classNumber}`}>
          {/* Left header for each class */}
          <div class="group">
            <div class="w-full bg-gray-300 p-4 flex justify-center items-center">
              <p class="font-bold text-xs md:text-base">Class {classNumber}</p>
            </div>
          </div>

          {/* Cells for each subject */}
          {[1, 2, 3, 4, 5].map((subject) => (
            <div class="group" >
              <div class="w-full bg-gray-100 p-4 flex justify-center items-center">
                {/* Access the price from the prices object */}
                {prices[classNumber] &&
                prices[classNumber][subject] !== undefined ? (
                  <p class="text-xs md:text-base">{prices[classNumber][subject]}</p>
                ) : (
                  <p>N/A</p>
                )}
              </div>
            </div>
          ))}
        </Fragment>
      ))
    }
  </div>
</Layout>